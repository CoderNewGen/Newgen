defaultOnlyFieldDetails.overrideLabel = DFContext.OverrideLabelValue;

// Retrieve required values upfront
const pageHasNonEditableField = PCore.getStoreValue('pageHasNonEdtiableField', '', 'app');
const context = PCore.getContainerUtils().getActiveContainerItemName(
  `${PCore.getConstants().APP.APP}/primary`
);
const workareaContext = PCore.getContainerUtils().getActiveContainerItemContext(`${context}/workarea`);

// Get editable fields and adjust the count inline
const editableFields = PCore.getFormUtils().getEditableFields(workareaContext);
const editableFieldsCount = 
  editableFields.length === 1 && editableFields[0].label === 'GoBack' 
    ? 0 
    : editableFields.length;

// Set the flag if the conditions are met
defaultOnlyFieldDetails.isOnlyField = editableFieldsCount === 1 && !pageHasNonEditableField;
